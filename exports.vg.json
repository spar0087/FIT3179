{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Export Value By Country",
    "font": "serif",          
    "fontWeight": "bold",    
    "fontSize": 20,            
    "dy": -10,                 
    "anchor": "middle",
    "subtitle": "This visualization illustrates import values by country in 2023 on a per capita basis."          
  },
  "width": 650,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/spar0087/FIT3179/refs/heads/main/exports.csv"
        },
        "key": "Country",
        "fields": ["Value"]
      }
    },
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/spar0087/FIT3179/refs/heads/main/population.csv"
        },
        "key": "Country",
        "fields": ["Population"]
      }
    },
    {
      "calculate": "datum.Value / datum.Population",
      "as": "NormalizedValue"
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 0.3
  },
  "encoding": {
    "color": {
      "field": "NormalizedValue",
      "type": "quantitative",
      "scale": {
        "domain": [0, 300],  
        "range": [
          "#dce6f0", "#c5d4e6", "#adc2dd", "#94b0d4", "#7c9dcb", "#638bc2", "#4b79b9", "#3968b0", 
          "#2e5b9e", "#284d8a", "#234177", "#1e3664", "#182c51", "#13223f", "#0f1a2d", "#0b121d", 
          "#070a0d", "#050505", "#030303", "#010101"
        ]
      },
      "legend": {
        "title": "Value per Person (USD)",
        "orient": "right",
        "format": "~s"
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "NormalizedValue", "type": "quantitative", "title": "Value per Person", "format": "~s"}
    ]
  }
}
