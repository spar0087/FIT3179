{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Import Value By Country",
    "font": "serif",          
    "fontWeight": "bold",    
    "fontSize": 20,            
    "dy": -10,                 
    "anchor": "middle",
    "subtitle": "This visualization illustrates import values by country in 2023 on a per capita basis."  
  },
  "width": 650,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/spar0087/FIT3179/refs/heads/main/imports.csv"
        },
        "key": "Country",
        "fields": ["Value"]
      }
    },
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/spar0087/FIT3179/refs/heads/main/population.csv"
        },
        "key": "Country",
        "fields": ["Population"]
      }
    },
    {
      "calculate": "datum.Value / datum.Population",
      "as": "NormalizedValue"
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 0.3
  },
  "encoding": {
    "color": {
      "field": "NormalizedValue",
      "type": "quantitative",
      "scale": {
        "domain": [0, 300],  
        "range": [
          "#fde0e0", "#f8c2c2", "#f4a3a3", "#ef8585", "#eb6666", "#e74747", "#e32828", 
          "#cf2424", "#ba2020", "#a61c1c", "#921818", "#7e1414", "#6a1010", "#560c0c", 
          "#420808", "#2d0404", "#190000", "#150000", "#110000", "#0d0000"
        ]        
      },
      "legend": {
        "title": "Value per person (USD)",
        "orient": "right",
        "format": "~s"
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "NormalizedValue", "type": "quantitative", "title": "Value per Person", "format": "~s"}
    ]
  }
}
