{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { 
    "text": "Exports and Imports in Malaysia by category (2023)",
    "font": "serif",
    "subtitle": "This visualization shows the top 20 export and import categories in 2023.",
    "anchor": "middle",
    "fontSize": 20,
    "subtitlePadding": 10
  },
  "data": {
    "url": "https://raw.githubusercontent.com/spar0087/FIT3179/refs/heads/main/category1.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"fold": ["export", "import"], "as": ["Type", "Value"]},
    {
      "filter": "(TradeType == 'both') || (TradeType != 'both' && datum.Type == TradeType)"
    }
  ],
  "params": [
    {
      "name": "TradeType",
      "value": "both",
      "bind": {
        "input": "select",
        "options": ["both","export", "import"],
        "labels": ["All", "Export", "Import"],
        "name": "Trade Type: "
      }
    }
  ],
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "x": {
          "field": "Malaysia Exports By Category",
          "type": "nominal",
          "axis": {
            "title": "Category",
            "labelAngle": -65
          }
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "scale": {
            "domain": [0, 130]
          },
          "axis": {
            "title": "USD (Billion)",
            "format": "s",
            "tickCount": 6,
            "grid": false
          }
        },
        "size": {
          "field": "Value",
          "type": "quantitative",
          "scale": {"range": [200, 2000]},
          "legend": {"title": "USD (Billion)"}
        },
        "color": {
          "field": "Type",
          "type": "nominal",
          "scale": {"domain": ["export", "import"], "range": ["#1f77b4", "#d62728"]}
        },
        "tooltip": [
          {"field": "Malaysia Exports By Category", "title": "Category"},
          {"field": "Value", "title": "USD (Billion)", "format": ".2f"},
          {"field": "Type", "title": "Type"}
        ]
      }
    },
    {
      "transform": [
        {
          "filter": "(datum['Malaysia Exports By Category'] == 'Electrical equipment')"
        }
      ],
      "mark": {"type": "text", "align": "left", "dx": 25},
      "encoding": {
        "x": {
          "field": "Malaysia Exports By Category",
          "type": "nominal"
        },
        "y": {
          "field": "Value",
          "type": "quantitative"
        },
        "text": {
          "condition": {
            "test": "(datum['Malaysia Exports By Category'] == 'Electrical equipment')",
            "value": "Electrical equipment"
          }
        },
        "color": {
          "field": "Type",
          "type": "nominal",
          "scale": {"domain": ["export", "import"], "range": ["#1f77b4", "#d62728"]}
        }
      }
    }
  ],
  "config": {
    "axisY": {
      "grid": true,
      "gridDash": [2, 2],
      "gridOpacity": 0.5
    }
  },
  "width": 650,
  "height": 325
} 